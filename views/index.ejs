    <title>youtube</title>
    <!-- css: reset -->
    <link rel="stylesheet" href="/static/css/reset.css" type="text/css" />
    <!-- css: layout /jy -->
    <link rel="stylesheet" href="/static/css/layout.css" type="text/css" />
    <!-- font : noto sans, moserrat, roboto -->
    <link
      href="https://fonts.googleapis.com/css2?family=Montserrat:wght@600;700&family=Noto+Sans+KR:wght@400;500&family=Roboto:wght@400;500&display=swap"
      rel="stylesheet"
    />
    <!-- fontawsome -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.8.2/css/all.min.css"
    />
