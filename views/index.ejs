  <body>
    <!-- 헤더영역 -->
    <header>
      <!-- 상단 nav -->
      <div class="top-nav">
        <h1><i class="fab fa-youtube"></i>YOUTUBE</h1>
        <div class="top-search-box">
          <input type="text" placeholder="검색" />
          <button type="button"><i class="xi-search"></i></button>
        </div>
        <a href=""><i class="fas fa-user-circle"></i></a>
      </div>
      <!-- left icon nav -->
      <nav class="left-nav">
        <ul>
          <li><i class="xi-bars"></i></li>
          <li>
            <i class="xi-home"></i><br />
            <span>홈</span>
          </li>
          <li>
            <i class="xi-library-video"></i><br />
            <span>Shorts</span>
          </li>
          <li>
            <i class="xi-video-call"></i><br />
            <span>구독</span>
          </li>
          <li>
            <i class="xi-timer-o"></i><br />
            <span>시청 기록</span>
          </li>
          <li>
            <i class="far fa-clock"></i><br />
            <span>나중에 볼 동영상</span>
          </li>
        </ul>
      </nav>

